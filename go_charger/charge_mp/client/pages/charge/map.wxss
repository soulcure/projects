/* pages/charge/map.wxss */

.searchBar {
  width: 100%;
  height: 9vh;
  background: rgba(255, 255, 255, 1);
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.userinfo-avatar {
  margin-left: 20rpx;
  height: 80rpx;
  width: 80rpx;
  border-radius: 50%;
  overflow: hidden; /*圆角*/
}

.searchText {
  font-size: 35rpx;
  margin-right: 60rpx;
}

.list {
  height: 70rpx;
  width: 70rpx;
  margin-right: 20rpx;
}

.map {
  width: 100%;
  height: 91vh;
}

.btnBar {
  position: fixed;
  bottom: 50rpx;
  width: 100%;
  height: 200rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.btnBg {
  width: 200rpx;
  height: 200rpx;
  background: #00a2ea;
  border-radius: 50%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.scanBtn {
  width: 100rpx;
  height: 100rpx;
}

.locateBtn {
  width: 100rpx;
  height: 100rpx;
  margin-left: 20rpx;
}

.serviceBtn {
  width: 100rpx;
  height: 100rpx;
  margin-left: 0rpx;
  margin-right: 20rpx;
  background-color: transparent;
}

.serviceBtn::after {
  border: none;
}

.scanText {
  font-size: 4vw;
  color: white;
}

.chargingBar {
  display: flex;
  flex-direction: row;
  border-radius: 10px;
  background: white;
  margin: 20px;
  padding: 10px;
  align-items: center;
}

.chargingInfo {
  font-size: 12pt;
}

.chargerBar {
  width: 100%;
  display: flex;
  flex-direction: row;
  background: white;
  padding: 10px;
}

.chargerBar {
  position: fixed;
  bottom: 0;
  align-items: center;
}

/*圆环进度条文字*/

.circle_info {
  position: absolute;
  width: 100%;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.circle_dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background-color: #fb9126;
}

.circle_txt {
  padding-left: 10rpx;
  font-size: 25pt;
  font-weight: 600;
  letter-spacing: 2rpx;
}

.progress_box {
  position: fixed;
  left: 10%;
  top: 20%;
  width: 80%;
  background: #00a2ea;
  border-radius: 20px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: white;
  padding-top: 20px;
}

.chargingData {
  display: flex;
  flex-direction: row;
}

.chargingItem {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 20px;
}

.chargingItemSep {
  width: 1px;
  background: linear-gradient(#00a2ea, #b2b2b2, #00a2ea);
}

.chargingValue {
  color: white;
  margin-left: 5px;
  margin-right: 5px;
}

.chargingCat {
  color: #b2b2b2;
}

.chargerAnimationSlow {
  animation-name: myfirst; /*动画的名称 */
  animation-duration: 300ms; /*动画从开始到结束的时间*/
  animation-timing-function: linear; /*动画执行快慢的参数*/
  animation-iteration-count: 1; /*动画执行多少次的参数 infinite*//*以下是兼容ios所需，参数意义与上相同*/
  -webkit-animation-name: myfirst;
  -webkit-animation-duration: 300ms;
  -webkit-animation-timing-function: linear;
  -webkit-animation-iteration-count: 1;
}

@keyframes myfirst {
  /*开始转的角度*/

  from {
    transform: translateY(100px);
  }/*结束的角度*/

  to {
    transform: translateY(0px);
  }
}

/*兼容ios*/

@-webkit-keyframes myfirst {
  from {
    transform: translateY(100px);
  }

  to {
    transform: translateY(0px);
  }
}

.powerBtn {
  position: fixed;
  bottom: 50rpx;
  left: 30%;
  width: 40%;
}


/*活动样式*/
.sidebar{
  position: fixed;
  top: 120rpx;
  right: 10rpx;
  width:60rpx;
}

.sidebar button{
  margin:20rpx 0;
  padding:0;
  background-color: transparent;
}

.sidebar button::after{
  border:none;
}

.sidebar .item{
  margin:20rpx 0;
}


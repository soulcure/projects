<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <include layout="@layout/header_title" />

    <View
        android:layout_width="1dp"
        android:layout_height="200dp" />

    <EditText
        android:id="@+id/et_phone"
        style="@style/login_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:drawableLeft="@drawable/ic_account_selector"
        android:drawablePadding="20dp"
        android:gravity="center_vertical"
        android:hint="@string/login_phone_hint"
        android:inputType="phone"
        android:lines="1"
        android:maxLength="11"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textColor="@color/color_blue" />

    <EditText
        android:id="@+id/et_password"
        style="@style/login_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/ic_pw_selector"
        android:drawablePadding="20dp"
        android:gravity="center_vertical"
        android:hint="@string/input_password"
        android:inputType="textPassword"
        android:lines="1"
        android:maxLength="20"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textColor="@color/color_blue" />

    <TextView
        android:id="@+id/tv_pw_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="你输入的密码有误"
        android:textColor="@color/color_red"
        android:visibility="invisible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:id="@+id/tv_forget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="@string/password_forget"
            android:textColor="@color/text_gray_54" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="@string/register_fast"
            android:textColor="@color/text_gray_54" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/btn_commit_selector"
        android:text="@string/login_immediate"
        android:textColor="@color/color_white"
        android:textSize="18sp" />

    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_weight="2" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp">

        <ImageView
            android:layout_width="@dimen/shape_circle_width1"
            android:layout_height="@dimen/shape_circle_width1"
            android:layout_centerInParent="true"
            android:src="@drawable/shape_circle_stroke_red1" />

        <ImageView
            android:layout_width="@dimen/shape_circle_width2"
            android:layout_height="@dimen/shape_circle_width2"
            android:layout_centerInParent="true"
            android:src="@drawable/shape_circle_stroke_red2" />

        <ImageView
            android:layout_width="@dimen/shape_circle_width3"
            android:layout_height="@dimen/shape_circle_width3"
            android:layout_centerInParent="true"
            android:src="@drawable/shape_circle_stroke_red3" />

        <ImageView
            android:layout_width="@dimen/shape_circle_width4"
            android:layout_height="@dimen/shape_circle_width4"
            android:layout_centerInParent="true"
            android:src="@drawable/shape_circle_stroke_red4" />

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="@dimen/shape_circle_width5"
            android:layout_height="@dimen/shape_circle_width5"
            android:layout_centerInParent="true"
            android:background="@drawable/shape_circle_stroke_red5"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@mipmap/ic_launcher"
                android:gravity="center"
                android:text="@string/sos_msg"
                android:textColor="@color/color_white"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn_entry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_rectangle_red_stroke_white"
                android:paddingBottom="5dp"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:paddingTop="5dp"
                android:text="立即查看"
                android:textColor="@color/color_white"
                android:textSize="24sp" />

        </LinearLayout>


    </RelativeLayout>


</RelativeLayout>
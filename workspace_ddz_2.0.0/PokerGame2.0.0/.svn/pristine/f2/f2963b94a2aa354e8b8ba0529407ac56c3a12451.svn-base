<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/logingif_tips_bg"
    android:paddingRight="12dp"
    android:paddingBottom="5dp">
    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:id="@+id/item1">
        <ImageView android:layout_width="69dp" 
            android:layout_height="70dp"
            android:src="@drawable/logingift_tips_item_default"
            android:id="@+id/item_pic" />
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="这里一个有六个字的吧"
            android:textSize="10dp"
            android:textColor="#502b1c"
            android:singleLine="true"
            android:ellipsize="end"
            android:maxLength="8"
            android:id="@+id/item_text" />
    </LinearLayout>
        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_alignTop="@id/item1"
        android:layout_toRightOf="@id/item1"
        android:layout_marginLeft="8dp"
        android:id="@+id/item2">
        <ImageView android:layout_width="69dp" 
            android:layout_height="70dp"
            android:src="@drawable/logingift_tips_item_default"
            android:id="@+id/item_pic"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="这里一个有六个字的吧"
            android:textSize="10dp"
            android:textColor="#502b1c"
            android:singleLine="true"
            android:ellipsize="end"
            android:maxLength="8"
            android:id="@+id/item_text" />
    </LinearLayout>
            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_alignTop="@id/item1"
        android:layout_toRightOf="@id/item2"
        android:layout_marginLeft="8dp"
        android:id="@+id/item3">
        <ImageView android:layout_width="69dp" 
            android:layout_height="70dp"
            android:src="@drawable/logingift_tips_item_default"
            android:id="@+id/item_pic"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="这里一个有六个字的吧"
            android:textSize="10dp"
            android:textColor="#502b1c"
            android:singleLine="true"
            android:ellipsize="end"
            android:maxLength="8"
            android:id="@+id/item_text" />
    </LinearLayout>
            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_alignTop="@id/item1"
        android:layout_toRightOf="@id/item3"
        android:layout_marginLeft="8dp"
        android:id="@+id/item4">
        <ImageView android:layout_width="69dp" 
            android:layout_height="70dp"
            android:src="@drawable/logingift_tips_item_default"
            android:id="@+id/item_pic"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="这里一个有六个字的吧"
            android:textSize="10dp"
            android:textColor="#502b1c"
            android:singleLine="true"
            android:ellipsize="end"
            android:maxLength="8"
            android:id="@+id/item_text" />
    </LinearLayout>
</RelativeLayout>
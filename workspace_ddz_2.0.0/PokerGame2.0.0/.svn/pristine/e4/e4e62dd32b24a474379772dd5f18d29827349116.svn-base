					.append("</plist>");
			sb.append("<signtype>").append(PayManager.getSigntypeString())
					.append("</signtype>");
		}
		/** 联通校验专用 **/
		sb.append("<macaddress>").append(getStringmacAddress(macaddress))
				.append("</macaddress>");// MAC玛
		sb.append("<ipaddress>").append(ipaddress).append("</ipaddress>");// 网络IP

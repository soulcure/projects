                android:layout_height="80dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="8dp"
                android:scaleType="fitCenter"
                android:src="@drawable/zone_grid_pic_match" />

            <ImageView
                android:id="@+id/ivName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:src="@drawable/cardzone_dashichang"
                android:visibility="invisible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="8dp"
                android:layout_toRightOf="@id/pic"
                android:background="@drawable/cardzone_match_common_bg"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tvScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:shadowColor="#1c4969"
                    android:shadowDx="3"
                    android:shadowDy="3"
                    android:shadowRadius="3"
                    android:singleLine="true"
                    android:text="@string/ddz_ledou_match_difen"
                    android:textColor="#fffdd7" />

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/cardzone_match_txt_bg"
                    android:gravity="center_vertical"
                    android:maxEms="15"
                    android:singleLine="true"
                    android:text="@string/ddz_gift_ledou_match"
                    android:textColor="#fffdd7"
                    android:textSize="18sp"
                    android:textStyle="normal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tvInCondition"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="left"
                        android:singleLine="true"
                        android:text="@string/ddz_gift_ledou"
                        android:textColor="#fffdd7"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvOnLineUsers"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:singleLine="true"
                        android:text="xxxx"
                        android:textColor="#fffdd7"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <ImageView

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/live_sdk_dialog_bg"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/live_sdk_txt_error"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="错误内容"
        android:textColor="#932c05"
        android:textSize="@dimen/live_sdk_content_size_13" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="#c3bfba" />

    <Button
        android:id="@+id/live_sdk_btn_ok"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="@drawable/live_sdk_btn_dialog_default_bg"
        android:text="知道了"
        android:textColor="#932c05"
        android:textSize="@dimen/live_sdk_content_size_13" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="#c3bfba" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/live_sdk_dialog_bg"
    android:orientation="vertical" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="喇叭消息"
        android:textColor="#932c05"
        android:textSize="@dimen/live_sdk_content_size_13" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="#c3bfba" />
    
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:padding="10dp"
        >
        <EditText 
            android:id="@+id/live_sdk_edit_laba_msg"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:imeOptions="flagNoExtractUi"
            android:maxLength="20"
            android:padding="5dp"
            android:gravity="top|left"
            android:background="@drawable/live_sdk_edit_laba_msg_bg"
            android:textColor="#6c6c6c"
            android:textSize="@dimen/live_sdk_content_size_13"
            android:inputType="textAutoComplete"
            />
        <TextView 
            android:id="@+id/live_sdk_txt_msg_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0/20"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="#6c6c6c"
            android:textSize="@dimen/live_sdk_content_size_12"
            />
    </RelativeLayout>
    
    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="#c3bfba" />
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:orientation="horizontal"
        >
        <Button 
            android:id="@+id/live_sdk_btn_send"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/live_sdk_btn_dialog_default_bg"
            android:textColor="#932c05"
            android:textSize="@dimen/live_sdk_content_size_13"
            android:text="发送"
            />
        <View
        android:layout_width="0.5dp"
        android:layout_height="fill_parent"
        android:background="#c3bfba" />

        <Button
            android:id="@+id/live_sdk_btn_cancel"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/live_sdk_btn_dialog_default_bg"
            android:textColor="#932c05"
            android:textSize="@dimen/live_sdk_content_size_13"
            android:text="取消" />

    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="#c3bfba" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/live_sdk_transparent"
    android:gravity="center"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/live_sdk_relayout_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#3a759c" >
        <SurfaceView
            android:id="@+id/live_sdk_float_surface_view"
            android:layout_width="64dp"
            android:layout_height="50dp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/live_sdk_gift_layout"
        android:layout_width="64dp"
        android:layout_height="15dp"
        android:background="#ff000000"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/live_sdk_gift_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:gravity="center"
            android:text="进入送礼"
            android:textColor="#ffffea00"
            android:textSize="@dimen/live_sdk_content_size_12" />
    </LinearLayout>

</LinearLayout>
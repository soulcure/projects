<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingRight="15dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/live_sdk_rank_item_iv_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/live_sdk_order1" />

        <TextView
            android:id="@+id/live_sdk_rank_item_tv_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:background="@color/live_sdk_yellow1"
            android:paddingBottom="1dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingTop="1dp"
            android:text="4"
            android:textColor="@color/live_sdk_yellow"
            android:textSize="@dimen/live_sdk_content_size_13"
            android:visibility="gone" />

        <TextView
            android:id="@+id/live_sdk_rank_item_tv_username"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:maxEms="10"
            android:singleLine="true"
            android:text="穿着拖鞋去游泳很爽"
            android:textColor="@color/live_sdk_rank_item_username_color"
            android:textSize="@dimen/live_sdk_content_size_14" />

        <ImageView
            android:id="@+id/live_sdk_rank_item_tv_level"
            android:layout_width="41dp"
            android:layout_height="14dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp" />

        <LinearLayout
            android:id="@+id/live_sdk_car_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/live_sdk_rank_item_tv_car_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:text="座驾:"
                android:textColor="@color/live_sdk_rank_item_username_color"
                android:textSize="@dimen/live_sdk_content_size_14" />

            <ImageView
                android:id="@+id/live_sdk_rank_item_iv_car"
                android:layout_width="38dp"
                android:layout_height="24dp"
                android:src="@drawable/live_sdk_rank_car" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
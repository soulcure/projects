<?xml version="1.0" encoding="utf-8"?>
<com.ivmall.android.app.views.RippleView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ripple="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/control_item_height"
    android:background="@color/white"
    ripple:rv_type="rectangle">


    <ImageView
        android:id="@+id/card_image"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="25dp" />

    <TextView
        android:id="@+id/card_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/card_image"
        android:textColor="@color/control_text_black"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/card_right_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/card_arrow" />

    <com.ivmall.android.app.views.IosCheckBox
        xmlns:app="http://schemas.android.com/tools"
        android:id="@+id/card_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/right_reference"
        ripple:bmHeight="36dp"
        ripple:bmWidth="54dp"
        />


    <ImageView
        android:id="@+id/card_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/right_reference"
        android:background="@drawable/card_icon_more"
        android:scaleType="fitCenter" />

    <ImageButton
        android:id="@+id/card_button"
        android:layout_width="54dp"
        android:layout_height="36dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/right_reference"
        android:background="@drawable/kontroal_btn_close"
        android:scaleType="fitCenter" />

    <View
        android:id="@+id/right_reference"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp" />

</com.ivmall.android.app.views.RippleView>
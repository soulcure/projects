<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/control_white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/navigation_head_height"
        android:background="@color/control_bg"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/pad_control_pic" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:src="@drawable/pad_control_info" />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="18dp"
        android:background="@color/control_line" />

    <com.ivmall.android.app.views.SettingItemView
        android:id="@+id/setting_tv_roport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:imageSrc="@drawable/kontroal_log_tv"
        app:itemText="@string/tv_control_report"
        app:rightItemText="@string/null_string"
        app:type="arrow">

    </com.ivmall.android.app.views.SettingItemView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/control_line" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="18dp"
        android:background="@color/control_line" />

    <com.ivmall.android.app.views.SettingItemView
        android:id="@+id/setting_tv_close"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:imageSrc="@drawable/kontroal_log_close"
        app:itemText="@string/close_app_remotely"
        app:rightItemText="@string/null_string"
        app:type="button">

    </com.ivmall.android.app.views.SettingItemView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/control_line" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="18dp"
        android:background="@color/control_line" />

    <com.ivmall.android.app.views.SettingItemView
        android:id="@+id/setting_skiphead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:imageSrc="@drawable/kontroal_log_skip"
        app:itemText="@string/skip_intro"
        app:rightItemText="@string/null_string"
        app:type="radio">

    </com.ivmall.android.app.views.SettingItemView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/control_line" />

    <com.ivmall.android.app.views.SettingItemView
        android:id="@+id/setting_playtime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:imageSrc="@drawable/kontroal_log_time"
        app:itemText="@string/set_playback_duration"
        app:rightItemText="@string/null_string"
        app:type="radio">

    </com.ivmall.android.app.views.SettingItemView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/control_line" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="18dp"
        android:background="@color/control_line" />


    <com.ivmall.android.app.views.SettingItemView
        android:id="@+id/setting_program_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:imageSrc="@drawable/kontroal_log_program"
        app:itemText="@string/custom_program_listing"
        app:rightItemText="@string/null_string"
        app:type="arrow">

    </com.ivmall.android.app.views.SettingItemView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/control_line" />

</LinearLayout>
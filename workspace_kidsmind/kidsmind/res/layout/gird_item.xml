<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rel_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_player"
            android:layout_width="@dimen/ITEM_NORMAL_SIZE"
            android:layout_height="@dimen/ITEM_NORMAL_SIZE"
            android:scaleType="fitXY"
            android:src="@drawable/cartoon_icon_default" />

        <TextView
            android:id="@+id/tv_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/img_player"
            android:layout_alignTop="@id/img_player"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:textColor="@color/font_white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/img_player"
            android:layout_alignTop="@id/img_player"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:textColor="@color/font_white"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/tv_player"
            style="@style/black_small_normal"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/item_text_height"
            android:layout_alignLeft="@id/img_player"
            android:layout_alignRight="@id/img_player"
            android:layout_below="@id/img_player"
            android:background="@drawable/bg_metro_shape"
            android:gravity="center" />

    </RelativeLayout>
</android.support.v7.widget.CardView>


<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#90000000"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:paddingTop="10dp">

    <ImageButton
        android:id="@+id/btn_play_return"
        android:layout_width="@dimen/back_button_size"
        android:layout_height="@dimen/back_button_size"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:background="#00000000"
        android:scaleType="fitXY"
        android:src="@drawable/parrents_back_home" />

    <TextView
        android:id="@+id/tv_episode_name"
        style="@style/white_text_normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="50dp"
        android:layout_toRightOf="@+id/btn_play_return"
        android:maxEms="15"
        android:singleLine="true" />

    <ImageButton
        android:id="@+id/btn_play_lock"
        android:layout_width="@dimen/back_button_size"
        android:layout_height="@dimen/back_button_size"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_gravity=""
        android:layout_marginRight="10dp"
        android:background="#00000000"
        android:scaleType="fitXY"
        android:src="@drawable/bg_play_lock_selector" />

    <ImageButton
        android:id="@+id/btn_share"
        android:layout_width="@dimen/back_button_size"
        android:layout_height="@dimen/back_button_size"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/btn_play_lock"
        android:background="#00000000"
        android:scaleType="fitXY"
        android:src="@drawable/bg_share_selector" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/pad_goods_item_width"
    android:layout_height="@dimen/pad_goods_item_height"
    android:background="@drawable/btn_buy_vip_item_pad_selector"
    android:clickable="true"
    android:focusable="true">

    <TextView
        android:id="@+id/tv_discount"
        style="@style/goods_discount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_coin"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true" />

    <View
        android:id="@+id/line"
        android:layout_centerHorizontal="true"
        android:layout_width="150dp"
        android:layout_height="1px"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/tv_discount"
        android:background="@color/recommend_text_bg"/>

    <TextView
        android:id="@+id/tv_coupon"
        style="@style/goods_discount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/line"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tv_coupon"
        android:gravity="center"
        android:layout_marginTop="13dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_vipName"
            style="@style/goods_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:singleLine="true" />

        <TextView
            android:id="@+id/tv_cost"
            style="@style/goods_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center" />

    </LinearLayout>
</RelativeLayout>


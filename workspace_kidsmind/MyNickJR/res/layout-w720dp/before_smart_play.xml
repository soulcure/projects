<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear_main_title"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B2000000"
    android:baselineAligned="false"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_cover"
            android:layout_width="130dp"
            android:layout_height="130dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/next_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/will_play"
                    android:textColor="@color/font_white"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/tv_cartoon_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text=""
                    android:textColor="@color/birday_info"
                    android:textSize="22sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_epd_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text=""
                android:textColor="@color/holo_red_light"
                android:textSize="22sp" />
        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/training_target"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/training_target"
            android:textColor="@color/font_white"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_pref_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/smart_item"
                android:gravity="center"
                android:padding="3dp"
                android:textColor="@color/font_white"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/tv_pref_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/smart_item"
                android:gravity="center"
                android:padding="3dp"
                android:textColor="@color/font_white"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/tv_pref_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/smart_item"
                android:gravity="center"
                android:padding="3dp"
                android:textColor="@color/font_white"
                android:textSize="22sp" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
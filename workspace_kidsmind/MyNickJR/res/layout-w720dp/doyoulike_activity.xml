<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:applidium="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/common_bg"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:paddingRight="25dp"
        android:paddingTop="30dp">

        <TextView
            android:id="@+id/time_over"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/countdown"
            android:gravity="center"
            android:text="@string/c_number"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/countdown"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <com.applidium.nickelodeon.views.ApplidiumTextView
            android:layout_width="@dimen/img_title_width"
            android:layout_height="@dimen/img_title_height"
            android:background="@drawable/rating_header_tab_1"
            android:gravity="center"
            android:maxLines="2"
            android:paddingTop="10dp"
            android:text="@string/rating_question"
            android:textColor="@color/blue_green_text"
            android:textSize="22sp"
            applidium:customFont="GothamRnd-Bold.otf" />

        <com.applidium.nickelodeon.views.ApplidiumTextView
            android:id="@+id/btn_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/btn_like"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:paddingLeft="80dp"
            android:text="@string/rating_yes"
            android:textColor="@android:color/white"
            android:textSize="@dimen/rating_button1_textSize"
            applidium:customFont="GothamRnd-Bold.otf" />

        <com.applidium.nickelodeon.views.ApplidiumTextView
            android:id="@+id/btn_unlike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_unlike"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:paddingLeft="80dp"
            android:text="@string/rating_no"
            android:textColor="@android:color/white"
            android:textSize="@dimen/rating_button1_textSize"
            applidium:customFont="GothamRnd-Bold.otf" />
    </LinearLayout>


</RelativeLayout>
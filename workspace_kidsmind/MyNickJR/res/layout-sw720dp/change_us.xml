<?xml version="1.0" encoding="utf-8"?>
<com.applidium.nickelodeon.views.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/common_bg">

    <com.applidium.nickelodeon.views.percent.PercentLinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_register"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_heightPercent="55%h"
        app:layout_widthPercent="96%h">

        <com.applidium.nickelodeon.views.ApplidiumTextView
            style="@style/vipinfo_text_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="注:用户名只允许修改一次"
            android:textColor="@color/login_et_textcolor"
            app:customFont="GothamRnd-Bold.otf" />

        <EditText
            android:id="@+id/et_username"
            style="@style/black_text_normal"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/input_register"
            android:hint="请输入新的用户名"
            app:layout_heightPercent="15%h"
            app:layout_marginTopPercent="5%h"
            app:layout_paddingLeftPercent="5%h"
            app:layout_widthPercent="110%h" />

        <Button
            android:id="@+id/btn_confirm"
            style="@style/vipinfo_text_black"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/btn_green"
            android:text="@string/confirm"
            app:layout_heightPercent="15%h"
            app:layout_marginTopPercent="5%h"
            app:layout_widthPercent="110%h" />
    </com.applidium.nickelodeon.views.percent.PercentLinearLayout>
</com.applidium.nickelodeon.views.percent.PercentRelativeLayout>
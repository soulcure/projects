<?xml version="1.0" encoding="utf-8"?>
<com.applidium.nickelodeon.views.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/common_bg">

    <com.applidium.nickelodeon.views.percent.PercentLinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_register"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_heightPercent="75%h"
        app:layout_widthPercent="120%h">

        <TextView
            android:id="@+id/text_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/white"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/et_old_pwd"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/input_register"
            android:digits="@string/edittext_digits"
            android:hint="请输入原密码"
            android:singleLine="true"
            app:layout_heightPercent="15%h"
            app:layout_marginTopPercent="2%h"
            app:layout_paddingLeftPercent="5%h"
            app:layout_widthPercent="110%h" />

        <EditText
            android:id="@+id/et_new_pwd"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/input_register"
            android:digits="@string/edittext_digits"
            android:hint="请输入新密码"
            android:maxLength="20"
            android:singleLine="true"
            app:layout_heightPercent="15%h"
            app:layout_marginTopPercent="4%h"
            app:layout_paddingLeftPercent="5%h"
            app:layout_widthPercent="110%h" />

        <EditText
            android:id="@+id/et_new_pwd_cf"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/input_register"
            android:digits="@string/edittext_digits"
            android:hint="确认新密码"
            android:maxLength="20"
            android:singleLine="true"
            app:layout_heightPercent="15%h"
            app:layout_marginTopPercent="4%h"
            app:layout_paddingLeftPercent="5%h"
            app:layout_widthPercent="110%h" />

        <Button
            android:id="@+id/btn_confirm"
            style="@style/vipinfo_text_black"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/btn_green"
            android:text="@string/confirm"
            app:layout_heightPercent="15%h"
            app:layout_marginTopPercent="4%h"
            app:layout_widthPercent="110%h" />
    </com.applidium.nickelodeon.views.percent.PercentLinearLayout>
</com.applidium.nickelodeon.views.percent.PercentRelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background">

    <ImageView
        android:id="@+id/about_us"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="110dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/btn_about"
        android:focusable="true" />


    <LinearLayout
        android:id="@+id/linear_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/tsk"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="20dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp">


        <Button
            android:id="@+id/button_tutor_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_product"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="30sp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/button_fastregister"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/btn_free" />

            <Button
                android:id="@+id/button_login"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/btn_login" />


        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/logo_mynick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/linear_center"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/bigLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/logo_mynick" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:orientation="vertical">

            <com.applidium.nickelodeon.views.ApplidiumTextView
                android:id="@+id/welcomeTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/login_welcome_title"
                android:textColor="@android:color/white"
                android:textSize="30sp"
                app:customFont="GothamRnd-Bold.otf" />

            <com.applidium.nickelodeon.views.ApplidiumTextView
                android:id="@+id/welcomeTitle2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/app_name"
                android:textColor="@android:color/white"
                android:textSize="30sp"
                app:customFont="GothamRnd-Bold.otf" />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/linear_center"
        android:layout_marginTop="15dp"
        android:layout_weight="0.4"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/frontpage_ad_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/lp_selector"
            android:focusable="true"
            android:scaleType="fitXY"
            android:visibility="invisible" />

    </LinearLayout>


</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<com.applidium.nickelodeon.views.SerieItemView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:padding="5dp">

    <ImageView
        android:id="@+id/img_frame"
        android:layout_width="@dimen/serie_width"
        android:layout_height="@dimen/serie_height"
        android:contentDescription="@string/app_name"
        android:scaleType="fitXY"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/tv_collect"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@id/img_frame"
        android:gravity="center"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:singleLine="true"
        android:text="@string/recommend_context"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_tag"
        android:layout_width="35dp"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@id/img_frame"
        android:gravity="center"
        android:textColor="@color/font_white"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_sequence"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:textColor="@color/snow"
        android:background="#e8252723"
        android:gravity="center"
        android:layout_alignBottom="@id/img_frame"
        android:layout_alignRight="@id/img_frame"
        android:textSize="14sp" />

</com.applidium.nickelodeon.views.SerieItemView>


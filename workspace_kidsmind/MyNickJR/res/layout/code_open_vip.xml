<?xml version="1.0" encoding="utf-8"?>
<com.applidium.nickelodeon.views.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/common_bg">

    <com.applidium.nickelodeon.views.percent.PercentLinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_register"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_heightPercent="55%h"
        app:layout_widthPercent="120%h">


        <TextView
            style="@style/vipinfo_text_white"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/renewal_qrcode_des" />

        <EditText
            android:id="@+id/et_code"
            style="@style/black_text_normal"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/input_register"
            android:hint="请输入开通码"
            android:inputType="number"
            app:layout_heightPercent="20%h"
            app:layout_marginTopPercent="4%h"
            app:layout_paddingLeftPercent="5%h"
            app:layout_widthPercent="110%h" />

        <Button
            android:id="@+id/btn_confirm"
            style="@style/vipinfo_text_white"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/btn_green"
            android:text="@string/confirm"
            android:textColor="@color/black"
            app:layout_heightPercent="20%h"
            app:layout_marginTopPercent="4%h"
            app:layout_widthPercent="110%h" />
    </com.applidium.nickelodeon.views.percent.PercentLinearLayout>
</com.applidium.nickelodeon.views.percent.PercentRelativeLayout>
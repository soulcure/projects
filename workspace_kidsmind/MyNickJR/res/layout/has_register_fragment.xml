<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/common_bg">


    <RelativeLayout
        android:id="@+id/rel_info"
        android:layout_width="@dimen/has_register_bg_width"
        android:layout_height="@dimen/has_register_bg_height"
        android:layout_centerInParent="true"
        android:background="@drawable/has_register_bg"
        android:gravity="center">

        <com.applidium.nickelodeon.views.ApplidiumTextView
            android:id="@+id/tv_title"
            style="@style/grey_text_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/has_register"
            app:customFont="GothamRnd-Bold.otf" />

        <LinearLayout
            android:id="@+id/linear_mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_title"
            android:layout_below="@id/tv_title"
            android:layout_marginTop="@dimen/has_register_margin_top"
            android:orientation="horizontal">

            <com.applidium.nickelodeon.views.ApplidiumTextView
                style="@style/grey_text_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/phone_num"
                app:customFont="GothamRnd-Bold.otf" />

            <com.applidium.nickelodeon.views.ApplidiumTextView
                android:id="@+id/tv_mobile"
                style="@style/red_text_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/has_register_margin_left"
                android:gravity="center"
                app:customFont="GothamRnd-Bold.otf" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/linear_mobile"
            android:layout_below="@id/linear_mobile"
            android:layout_marginTop="@dimen/has_register_margin_top"
            android:orientation="horizontal">

            <com.applidium.nickelodeon.views.ApplidiumTextView
                style="@style/grey_text_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/user_name"
                app:customFont="GothamRnd-Bold.otf" />

            <com.applidium.nickelodeon.views.ApplidiumTextView
                android:id="@+id/tv_username"
                style="@style/red_text_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/has_register_margin_left"
                android:gravity="center"
                app:customFont="GothamRnd-Bold.otf" />
        </LinearLayout>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <View
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_weight="3.8" />

        <TextView
            android:layout_width="@dimen/has_register_info_width"
            android:layout_height="@dimen/has_register_info_height"
            android:background="@drawable/has_register_info_bg"
            android:gravity="center"
            android:text="@string/has_register_info"
            android:textColor="#1f6613"
            android:textSize="20sp"
            android:textStyle="bold" />

        <View
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_weight="1" />
    </LinearLayout>


    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/button_back_margin_left"
        android:layout_marginTop="@dimen/button_back_margin_top"
        android:background="@color/transparent"
        android:scaleType="fitXY"
        android:src="@drawable/btn_back" />
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/play_frame_width"
    android:layout_height="@dimen/play_frame_height"
    android:layout_gravity="center"
    android:background="@drawable/bg_parent_frame"
    android:orientation="vertical">


    <TextView
        style="@style/buy_vip_success"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:paddingTop="5dp"
        android:text="@string/thanks_open" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:gravity="center">

        <TextView
            style="@style/buy_vip_success"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/you_have_pay" />

        <TextView
            android:id="@+id/vip_name"
            style="@style/buy_vip_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            style="@style/buy_vip_success"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/menber_server" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <TextView
            style="@style/buy_vip_success"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/menber_server_time" />

        <TextView
            android:id="@+id/vip_time"
            style="@style/buy_vip_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_know"
        style="@style/normal_blue_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:background="@drawable/btn_green"
        android:focusable="true"
        android:gravity="center"
        android:paddingBottom="15dp"
        android:paddingLeft="60dp"
        android:paddingRight="60dp"
        android:paddingTop="15dp"
        android:text="@string/i_know"
        android:textColor="@android:color/white"
        android:textSize="25sp" />
</LinearLayout>


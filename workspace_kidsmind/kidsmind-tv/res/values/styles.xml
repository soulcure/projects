<resources>

    <style name="AppTheme" parent="BaseAppTheme" />

    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@color/window_background</item>
    </style>

    <!-- dialog对话框风格 begin-->
    <style name="AppDialog" parent="@android:style/Theme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimAmount">0.7</item>
    </style>

    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimAmount">0.8</item>
        <item name="android:textSize">35sp</item>
    </style>

    <style name="alert_dialog" parent="@android:style/Theme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <style name="CustomProgressDialog" parent="@style/CustomDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- <item name="android:windowBackground">@drawable/ft_loading_bg</item> -->
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="dialog1" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimAmount">0.0</item>
        <item name="android:textSize">35sp</item>
    </style>

    <style name="loginDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/bg_time_seekbar</item>
    </style>

    <style name="roomRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar_selector_small</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:maxHeight">50dp</item>
    </style>

    <style name="recommendRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar_selector_small</item>
        <item name="android:minHeight">25dp</item>
        <item name="android:maxHeight">25dp</item>
    </style>


    <style name="dialog_holo_theme" parent="@android:style/Theme.Holo.Light.NoActionBar.Fullscreen">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimAmount">0.8</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="magicbox_pro_theme">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimAmount">0.8</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>


    <style name="full_dialog">
        <item name="android:windowBackground">@drawable/bg_time_seekbar</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
    </style>
    <!-- 对话框title字体风格 -->
    <style name="dialogTitleStyle">
        <item name="android:textColor">#ffdeb7</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>
    <!-- 对话框button字体风格 -->
    <style name="dialogButtonStyle">
        <item name="android:textColor">#853403</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:paddingLeft">3dp</item>
        <item name="android:paddingRight">3dp</item>
    </style>
    <style name="blue_gry_text_normal">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#CCCCDD</item>
    </style>

    <!--about us 适用-->
    <style name="green_text_normal">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/about_us_title_color</item>
    </style>

    <style name="white_text_large_bold">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/font_white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="white_small_normal_us">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/about_us_text_color</item>
    </style>
    <!--about us 适用-->

    <style name="baby_sex">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="white_text_bold">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/font_white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="white_text_normal">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/font_white</item>
    </style>

    <style name="black_text_normal">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="normal_blue_text">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/system_blue_color</item>
    </style>


    <style name="about_us_text_normal">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/about_us_font_color</item>
    </style>

    <style name="white_small_normal">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/font_white</item>
    </style>

    <style name="buy_vip_success">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="buy_vip_info">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/orange_text</item>
    </style>

    <style name="baby_five_ability">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/ability</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="goods_name">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#555555</item>
    </style>

    <style name="goods_cost">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#1e1e1e</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="goods_cost_small">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#1e1e1e</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="parent_tabs_text">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/font_white</item>
        <item name="android:padding">15dp</item>
    </style>

    <style name="goods_discount">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#fd3303</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SwitchButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="VipTableStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/font_white</item>
    </style>

    <style name="radio_btn_sex">
        <item name="android:button">@drawable/radio_btn_selector</item>
    </style>

    <!--tab layout 字体样式-->
    <style name="TabLayoutStyle">
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">22sp</item>
        <item name="android:shadowColor">#4d4d4d</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-3</item>
        <item name="android:shadowRadius">3</item>
    </style>
</resources>